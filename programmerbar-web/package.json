{
	"name": "@programmerbar/web",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "pnpm run build && wrangler deploy",
		"typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"lint": "eslint src",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"clean": "rm -rf node_modules .svelte-kit build .turbo",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply progbar-db",
		"db:migrate:local": "pnpm db:migrate -- --local",
		"client:generate": "./generate-api-client.sh"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20251008.0",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.34.0",
		"@faker-js/faker": "10.0.0",
		"@openapitools/openapi-generator-cli": "^2.23.0",
		"@playwright/test": "1.56.0",
		"@sveltejs/adapter-cloudflare": "7.2.4",
		"@sveltejs/kit": "2.46.4",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@tailwindcss/forms": "0.5.10",
		"@tailwindcss/typography": "0.5.19",
		"@tailwindcss/vite": "^4.1.12",
		"@types/eslint": "9.6.1",
		"@types/node": "^24.7.1",
		"@types/react": "19.2.2",
		"@types/react-dom": "19.2.1",
		"drizzle-kit": "0.31.5",
		"drizzle-seed": "^0.3.1",
		"eslint": "9.37.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.12.4",
		"globals": "16.4.0",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"prettier-plugin-tailwindcss": "0.6.14",
		"svelte": "5.39.11",
		"svelte-check": "4.3.3",
		"tailwindcss": "4.1.14",
		"tsx": "4.20.6",
		"typescript": "5.9.3",
		"typescript-eslint": "8.46.0",
		"vite": "7.1.9",
		"vitest": "3.2.4",
		"wrangler": "4.42.2"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "1.1.0",
		"@lucide/svelte": "^0.545.0",
		"@oslojs/crypto": "1.0.1",
		"@oslojs/encoding": "1.1.0",
		"@programmerbar/email-templates": "workspace:*",
		"@react-email/render": "^1.2.1",
		"@sanity/client": "7.12.0",
		"@sanity/image-url": "1.2.0",
		"arctic": "3.7.0",
		"bits-ui": "2.11.4",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"date-fns": "4.1.0",
		"date-fns-tz": "^3.2.0",
		"drizzle-orm": "0.44.6",
		"groq": "4.10.2",
		"ky": "^1.9.0",
		"lucia": "3.2.2",
		"marked": "16.4.0",
		"nanoid": "5.1.6",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"resend": "6.1.2",
		"svelte-sonner": "1.0.5",
		"tailwind-merge": "3.3.1",
		"zod": "4.1.12",
		"zod-form-data": "3.0.1"
	}
}
