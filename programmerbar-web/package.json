{
	"name": "@programmerbar/web",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "pnpm run build && wrangler deploy",
		"typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"lint": "eslint src",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:unit": "vitest",
		"clean": "rm -rf node_modules .svelte-kit .turbo .wrangler",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply progbar-db",
		"db:migrate:local": "pnpm db:migrate -- --local"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@faker-js/faker": "10.1.0",
		"@playwright/test": "1.56.1",
		"@programmerbar/cms": "workspace:*",
		"@sveltejs/adapter-cloudflare": "7.2.4",
		"@sveltejs/kit": "2.48.5",
		"@sveltejs/vite-plugin-svelte": "6.2.1",
		"@tailwindcss/forms": "0.5.10",
		"@tailwindcss/typography": "0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/eslint": "9.6.1",
		"@types/node": "^24.10.1",
		"@types/react": "19.2.5",
		"@types/react-dom": "19.2.3",
		"@types/web-push": "^3.6.4",
		"drizzle-kit": "0.31.7",
		"drizzle-seed": "^0.3.1",
		"eslint": "9.39.1",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.13.0",
		"globals": "16.5.0",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"prettier-plugin-tailwindcss": "0.7.1",
		"svelte": "5.43.7",
		"svelte-check": "4.3.4",
		"tailwindcss": "4.1.17",
		"tsx": "4.20.6",
		"typescript": "5.9.3",
		"typescript-eslint": "8.46.4",
		"vite": "7.2.2",
		"vite-plugin-devtools-json": "^1.0.0",
		"vite-plugin-mkcert": "^1.17.9",
		"vitest": "4.0.9",
		"wrangler": "4.47.0"
	},
	"dependencies": {
		"@block65/webcrypto-web-push": "^1.0.2",
		"@lucia-auth/adapter-drizzle": "1.1.0",
		"@lucide/svelte": "^0.553.0",
		"@programmerbar/email-templates": "workspace:*",
		"@react-email/render": "^2.0.0",
		"@sanity/client": "7.12.1",
		"@sanity/image-url": "1.2.0",
		"@sentry/sveltekit": "^10.25.0",
		"arctic": "3.7.0",
		"bits-ui": "2.14.3",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"date-fns": "4.1.0",
		"date-fns-tz": "^3.2.0",
		"drizzle-orm": "0.44.7",
		"groq": "4.15.0",
		"lucia": "3.2.2",
		"marked": "17.0.0",
		"nanoid": "5.1.6",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"resend": "6.4.2",
		"svelte-sonner": "1.0.6",
		"tailwind-merge": "3.4.0",
		"web-push": "^3.6.7",
		"zod": "4.1.12",
		"zod-form-data": "3.0.1"
	}
}
