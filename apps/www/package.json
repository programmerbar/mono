{
	"name": "@programmerbar/www",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler dev",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"deploy": "pnpm run build && wrangler deploy",
		"typegen": "wrangler types && mv worker-configuration.d.ts src/",
		"lint": "prettier --check . && eslint src",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"clean": "rm -rf node_modules .svelte-kit build .turbo",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply progbar-db",
		"db:migrate:local": "pnpm db:migrate -- --local",
		"client:generate": "openapi-generator-cli generate -i http://localhost:8000/api-docs/openapi.json -g typescript-fetch -o ./src/lib/generate-api-client --skip-validate-spec"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20250813.0",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.33.0",
		"@faker-js/faker": "9.9.0",
		"@openapitools/openapi-generator-cli": "^2.23.0",
		"@playwright/test": "1.54.2",
		"@sveltejs/adapter-cloudflare": "7.1.3",
		"@sveltejs/kit": "2.28.0",
		"@sveltejs/vite-plugin-svelte": "6.1.2",
		"@tailwindcss/forms": "0.5.10",
		"@tailwindcss/typography": "0.5.16",
		"@tailwindcss/vite": "^4.1.11",
		"@types/eslint": "9.6.1",
		"@types/node": "^22.14.1",
		"@types/react": "19.1.10",
		"@types/react-dom": "19.1.7",
		"drizzle-kit": "0.31.4",
		"drizzle-seed": "^0.3.1",
		"eslint": "9.33.0",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-svelte": "3.11.0",
		"globals": "16.3.0",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"prettier-plugin-tailwindcss": "0.6.14",
		"svelte": "5.38.1",
		"svelte-check": "4.3.1",
		"tailwindcss": "4.1.11",
		"tsx": "4.20.4",
		"typescript": "5.8.3",
		"typescript-eslint": "8.39.1",
		"vite": "7.1.2",
		"vitest": "2.1.8",
		"wrangler": "4.31.0"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "1.1.0",
		"@lucide/svelte": "^0.539.0",
		"@oslojs/crypto": "1.0.1",
		"@oslojs/encoding": "1.1.0",
		"@programmerbar/emails": "workspace:*",
		"@react-email/render": "^1.2.0",
		"@sanity/client": "7.8.2",
		"@sanity/image-url": "1.1.0",
		"arctic": "3.7.0",
		"bits-ui": "2.9.2",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"date-fns": "4.1.0",
		"drizzle-orm": "0.44.4",
		"groq": "4.4.0",
		"ky": "^1.9.0",
		"lucia": "3.2.2",
		"marked": "16.1.2",
		"nanoid": "5.1.5",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"resend": "6.0.1",
		"svelte-sonner": "1.0.5",
		"tailwind-merge": "3.3.1",
		"zod": "4.0.17",
		"zod-form-data": "3.0.0"
	}
}
