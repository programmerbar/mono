{
	"name": "@programmerbar/www",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "pnpm run build && wrangler pages dev .svelte-kit/cloudflare",
		"test": "pnpm run test:integration && pnpm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint src",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"deploy": "pnpm run build && wrangler pages deploy .svelte-kit/cloudflare",
		"types": "wrangler types src/worker-configuration.d.ts",
		"clean": "rm -rf node_modules .svelte-kit build .turbo",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "wrangler d1 migrations apply progbar-db",
		"db:migrate:local": "pnpm db:migrate -- --local"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "4.20250321.0",
		"@faker-js/faker": "9.6.0",
		"@playwright/test": "1.49.1",
		"@sveltejs/adapter-cloudflare": "6.0.1",
		"@sveltejs/kit": "2.20.0",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@tailwindcss/forms": "0.5.9",
		"@tailwindcss/typography": "0.5.15",
		"@types/eslint": "9.6.1",
		"@types/react": "19.0.1",
		"autoprefixer": "10.4.20",
		"drizzle-kit": "0.30.0",
		"eslint": "9.16.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-svelte": "2.46.1",
		"globals": "15.13.0",
		"postcss": "8.4.49",
		"prettier": "3.4.2",
		"prettier-plugin-svelte": "3.3.2",
		"prettier-plugin-tailwindcss": "0.6.9",
		"svelte": "5.25.3",
		"svelte-check": "4.1.1",
		"tailwindcss": "3.4.16",
		"tsx": "4.19.2",
		"typescript": "5.7.2",
		"typescript-eslint": "8.18.0",
		"vite": "6.0.3",
		"vitest": "2.1.8",
		"wrangler": "4.4.0"
	},
	"dependencies": {
		"@lucia-auth/adapter-drizzle": "1.1.0",
		"@lucide/svelte": "^0.503.0",
		"@oslojs/crypto": "1.0.1",
		"@oslojs/encoding": "1.1.0",
		"@programmerbar/emails": "workspace:*",
		"@react-email/render": "1.0.3",
		"@sanity/client": "6.24.1",
		"@sanity/image-url": "1.1.0",
		"arctic": "2.3.1",
		"bits-ui": "0.21.16",
		"class-variance-authority": "0.7.1",
		"clsx": "2.1.1",
		"date-fns": "4.1.0",
		"drizzle-orm": "0.38.1",
		"groq": "3.67.1",
		"lucia": "3.2.2",
		"marked": "15.0.3",
		"nanoid": "5.0.9",
		"react": "19.0.0",
		"resend": "4.0.1",
		"svelte-sonner": "0.3.28",
		"tailwind-merge": "2.5.5",
		"zod": "3.24.1",
		"zod-form-data": "2.0.2"
	}
}
